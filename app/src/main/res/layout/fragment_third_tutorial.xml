<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.ait.android.uriel.memorygame.ThirdTutorialFragment">

    <ImageView
        android:id="@+id/blank_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/game_main"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/birds_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/birds_screen"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/soccer_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/soccer_screen"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/message_box"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="45dp"
        style="@style/Font"
        android:gravity="center"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/crazy_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/finger"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>

</RelativeLayout>
